<!-- Console Saving Errors -->
<% if @console.errors.any? %>
<div id="error_explanation">
    <div class="alert alert-danger">
        The form contains <%= pluralize(@console.errors.count, "error") %>.<br>
        <ul>
            <% @console.errors.full_messages.each do |msg| %>
            <li class='text-danger'><%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>
<!-- Console Saving Errors End-->


