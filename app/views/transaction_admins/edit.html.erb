<!--Display the page's path-->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Admin Panel</a></li>
    <li class="breadcrumb-item"><a href="<%= transaction_admins_path %>">Manage Transactions</a></li>
    <li class="breadcrumb-item"><a href="#">Edit</a></li>
  </ol>
</nav>

<!--Display the edit form-->
<div class="row mt-5">
  <div class="col-12">
    <div class="card ">
      <div class="card-header">
        <h2>Update Transaction</h2>
      </div>
      <div class="card-body">
        <!-- Displays validation errors -->
        <%= render 'error_acc_admin' %>
        <%= form_for(@transaction, :url => transaction_admin_path(@transaction), :method => "PATCH") do |f| %>
        <!--Partial for receiver, amount and account_id input-->
        <%= render(:partial => 'form', :locals => {:f => f}) %>
        <br>
        <button class="btn btn-warning btn-block" type="submit">Update Transaction</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
