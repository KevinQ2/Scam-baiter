<!-- Breadcrumb trail under header -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin Panel</a></li>
        <li class="breadcrumb-item"><a href="<%= currency_admins_path %>">Manage Currencies</a></li>
        <li class="breadcrumb-item"><a href="#">New</a></li>
    </ol>
</nav>


<!-- Section: Content -->
<div class="row ">
    <div class="col-12">
        <div class="card ">

            <div class="card-header">
                <h2>Create New Currency</h2>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 offset-3">
                        <!-- Check for errors-->
                        <%= render 'error_cur_admin' %>

                        <!-- The form for making a new currency -->
                        <%= form_for(@currency, :url => currency_admins_path, :method => 'post') do |f| %>
                        <!-- Partial form with currency text fields -->
                        <%= render(:partial=> 'form', :locals => {:f => f}) %>

                        <div class="form-buttons">
                            <%= f.submit "Add Currency", class: 'btn btn-success' %>
                        </div>

                        <% end %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>