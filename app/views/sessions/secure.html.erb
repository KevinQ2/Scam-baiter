<div class="text-center container my-5 py-5 z-depth-1">
    <h1>Bank Jackal Online Banking</h1>
    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">
        <hr>
        <!--Grid row-->
        <div class="row d-flex justify-content-center">

            <!--Grid column-->
            <div class="col-md-6">

                <!-- Default form login -->

                <%= form_with(url: "/loginsecure", local: true) do |f| %>

                <p class="h4 mb-4">Two Factor Authentication - Existing User</p>

                <%= f.password_field :secure,  class: 'form-control mb-4', placeholder: "Secondary Password" %>

                <button class="btn btn-success btn-block my-4" type="submit">Secure Secondary Sign in</button>
                <% end %>

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->


    </section>
    <!--Section: Content-->
</div>
